<script>
    // シンプル計算ロジック
    function setVal(n) {
        document.getElementById('area').value = n;
        calc();
    }

    function calc() {
        var area = parseFloat(document.getElementById('area').value);
        if(!area) { alert("面積を入力してください"); return; }

        var unit = 11200;
        var rA = Math.round(area);
        
        // 単価テーブル
        var prices = {
            10:11200, 11:11200, 12:11100, 13:11000, 14:11000, 15:10900,
            16:10800, 17:10700, 18:10700, 19:10600, 20:10500, 21:10400,
            22:10400, 23:10300, 24:10200, 25:10200, 26:10100, 27:10100,
            28:10100, 29:10100, 30:10000, 31:10000, 32:9900, 33:9900,
            34:9900, 35:9900, 36:9800, 37:9800, 38:9800, 39:9800,
            40:9700, 41:9700, 42:9700, 43:9700, 44:9600, 45:9600,
            46:9600, 47:9600, 48:9500, 49:9500, 50:9500, 51:9500,
            52:9400, 53:9400, 54:9400, 55:9400
        };

        if(rA >= 63) unit = 9200;
        else if(rA >= 56) unit = 9300;
        else if(prices[rA]) unit = prices[rA];

        var base = area * unit;
        var fixed = false;
        
        if(base < 115900) {
            base = 115900;
            fixed = true;
        }

        var tax = Math.floor(base * 0.1);
        var total = Math.floor(base + tax);

        document.getElementById('result').style.display = 'block';
        document.getElementById('u-price').innerText = fixed ? "一式適用" : unit.toLocaleString() + " 円";
        document.getElementById('b-price').innerText = base.toLocaleString() + " 円";
        document.getElementById('tax').innerText = tax.toLocaleString() + " 円";
        document.getElementById('total').innerText = "¥" + total.toLocaleString();
        
        document.getElementById('fixed-notice').style.display = fixed ? 'block' : 'none';
    }

    // FAQ開閉
    function toggle(el) {
        if(el.classList.contains('open')) {
            el.classList.remove('open');
        } else {
            el.classList.add('open');
        }
    }
</script>

